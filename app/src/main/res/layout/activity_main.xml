<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.robertoluishernandeztovar.my_crazy_buttons_app.MainActivity">

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playAudio1"
        android:background="#ff0000" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:onClick="playAudio2"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true"
        android:background="#0004ff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button3"
        android:onClick="playAudio3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#08ff00" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button4"
        android:onClick="playAudio4"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff6f00" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button5"
        android:onClick="playAudio5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:background="#dcff00dd" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button6"
        android:onClick="playAudio6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="#0099ff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button7"
        android:onClick="playAudio7"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ddff00" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button8"
        android:onClick="playAudio8"
        android:layout_alignTop="@+id/button7"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:backgroundTint="#000000" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button9"
        android:onClick="playAudio9"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:backgroundTint="#aa00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Golpe"
        android:id="@+id/textView2"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Risa"
        android:id="@+id/textView"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarma"
        android:id="@+id/textView3"
        android:layout_below="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Risa2"
        android:id="@+id/textView4"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nadie Te Pregunto"
        android:id="@+id/textView5"
        android:layout_above="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ReallyNigga"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Risa Malvada"
        android:id="@+id/textView7"
        android:layout_below="@+id/button7"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Turn Down For What"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mugido"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9" />
</RelativeLayout>
